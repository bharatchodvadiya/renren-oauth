<project name="social-connector-renren" basedir="." default="*install">
	<property file="${basedir}/../../config-magento/ant/properties/config-magento" />

	<import file="${basedir}/../../config-magento/ant/templates/common.xml" />
	<import file="${workspacedir}/config-magento/ant/templates/target-magento.xml" />

	<target name="*install" depends="test-src, test-db">
		<copy overwrite="true" force="true" verbose="true" todir="${local.deploydir}/app">
			<fileset dir="${projectdir}/app" />
		</copy>
		<copy overwrite="true" force="true" verbose="true" todir="${local.deploydir}/media">
			<fileset dir="${projectdir}/media" />
		</copy>
		
		<copy overwrite="true" force="true" verbose="true" todir="${local.deploydir}/lib">
			<fileset dir="${projectdir}/lib" />
		</copy>
		
		
		
		
		<sql driver="${sql.driver}" url="${sql.url}" userid="${sql.user}" password="${sql.pass}">
			<classpath>
				<pathelement location="${ant.lib.dir}/mysql-connector-java-5.1.18/mysql-connector-java-5.1.18-bin.jar" />
			</classpath>
			<transaction src="${projectdir}/db/mysql/magento/connector-info.sql" />
		</sql>


	</target>
</project>